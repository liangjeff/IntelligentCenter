@{
    ViewBag.Title = "User Profile";
}
@section Scripts{
    @Scripts.Render("~/Angular/Controller/AccountCtrl.js")
}

<script>
    angular.module('Spartan', []);
    angular.element(document).ready(function() {
        angular.bootstrap(document, ['Spartan']);
    });

    angular.module("Spartan").value("currentUserId", @Html.Raw(Json.Encode(ViewBag.CurrentUserId)));
</script>

<div ng-controller="accountController as ctrl" class="container" style="margin-top: 30px;">
    <div class="row">
        <div class="col-lg-3">
            <h1>{{ctrl.userProfile['UserId']}}</h1>
        </div>
        <div class="col-lg-9">
            <div class="form-group">
                <label for="firstName">First Name</label>
                <input type="text" class="form-control" id="firstName" ng-model="ctrl.userProfile['FirstName']">
            </div>

            <div class="form-group">
                <label for="lastName">Last Name</label>
                <input type="text" class="form-control" id="lastName" ng-model="ctrl.userProfile['LastName']">
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="text" class="form-control" id="email" ng-model="ctrl.userProfile['Email']">
            </div>
            <div class="form-group">
                <label for="salution">Salution</label>
                <input type="text" class="form-control" id="salution" ng-model="ctrl.userProfile['Salutation']">
            </div>
            <div class="form-group">
                <label for="InputJobTitle">Job Title</label>
                <input type="text" class="form-control" id="InputJobTitle" ng-model="ctrl.userProfile['JobTitle']">
            </div>
            <div class="form-group">
                <label for="InputContactNumber">Contact Number</label>
                <input type="text" class="form-control" id="InputContactNumber" ng-model="ctrl.userProfile['ContactNumber']">
            </div>

            @*<label for="InputContactNumber">{{ctrl.userProfile['FirstName']}}</label>
           <button class="btn btn-danger" >{{ctrl.userProfile['ContactNumber']}}</button>*@
            @*<input type="text" class="form-control" id="test" ng-model="ctrl.userProfile['FirstName']">*@
            <button type="submit" class="btn btn-default" ng-click="ctrl.onSaveClick()">Save</button>
        </div>
    </div>
</div>
